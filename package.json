  "license": "MIT",
  "scripts": {
    "precodecov": "yarn coverage",
    "codecov": "./node_modules/.bin/codecov",
    "precoverage": "yarn build && rm -rf ./coverage",
    "coverage": "./node_modules/.bin/nyc --reporter=lcov ./node_modules/.bin/truffle test",
    "pretest": "yarn build",
    "test": "yarn truffle test",
    "build": "yarn tsc",
    "pretsc": "rm -rf ./build",
    "tsc": "./node_modules/.bin/tsc",
    "truffle": "./node_modules/.bin/truffle",
    "prettier": "./node_modules/.bin/prettier '{src,test}/**/*.ts' --write",
    "tslint": "./node_modules/.bin/tslint --format verbose '{src,test}/**/*.ts'"
  },
  "dependencies": {
    "@types/bignumber.js": "^5.0.0",
    "@types/bn.js": "^4.11.5",
    "@types/chai": "^4.1.7",
    "chai": "^4.2.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.7",
    "@types/web3": "^1.0.18",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.5.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.1",
    "truffle": "^5.0.21",
    "ts-node": "^8.2.0",
    "tsc": "^1.20150623.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
